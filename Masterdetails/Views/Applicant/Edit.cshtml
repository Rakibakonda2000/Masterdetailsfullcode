@model Masterdetails.Models.Applicant

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Applicant</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input asp-for="Date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsAvaiable" /> @Html.DisplayNameFor(model => model.IsAvaiable)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Picpath" class="control-label"></label>
                <input asp-for="Picpath" class="form-control" />
                <span asp-validation-for="Picpath" class="text-danger"></span>
            </div>
            <table class="table">
                <thead>
                    <tr>
                        <td>Company Name</td>
                        <td>Designation</td>
                        <td>Year Of Experience</td>
                        <td><input type="submit" value="ADD" name="btn" class="btn btn-success" /></td>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.ApplicantExes.Count; i++)
                    {
                        <tr>
                            <td><input asp-for="ApplicantExes[i].CompanyName" class="form-control" /></td>
                            <td><input asp-for="ApplicantExes[i].Designation" class="form-control" /></td>
                            <td><input asp-for="ApplicantExes[i].YearofEx" class="form-control" /></td>
                            @* <td>@Html.EditorFor(model => Model.Students[i].StudentName, new { htmlAttributes = new { @class = "form-control" } })</td>
                        <td>@Html.EditorFor(model => Model.Students[i].Address, new { htmlAttributes = new { @class = "form-control" } })</td> *@
                            <td><input type="button" class="btn btn-danger" value="Delete" onclick="Remove(this)" /></td>
                        </tr>
                    }
                </tbody>
            </table>

            <div class="form-group mt-3">
                <input type="submit" value="Update" name="btn" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-danger">Cancel</a>
            </div>
        </form>
    </div>
</div>

<div>
    @*   <a asp-action="Index">Back to List</a> *@
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        function Remove(e) {
            e.closest("tr").remove();
        }
    </script>
}
